{
  "manifest_version": 3,
  "name": "Stock News Sentiment Analyzer",
  "version": "1.1",
  "description": "Analyze stock news sentiment in real-time on financial websites with interactive controls",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8000/*", "https://*/*"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

